{
    "manifest_version": 2,
    "name": "Shorts Blocker",
    "version": "1.3",
    "description": "Hide YouTube shorts and any videos under 3 mins in length.",

    "content_scripts": [
        {
            "matches": [ "https://www.youtube.com/*"],
            "css": [ "blocker/style.css" ],
            "js": [ "blocker/desktop.js" ]
        },
        {
            "matches": ["https://m.youtube.com/*"],
            "css": [ "blocker/style.css" ],
            "js": [ "blocker/mobile.js" ]
        }
    ],

    "browser_action": { "default_popup": "popup/index.html" },

    "browser_specific_settings": {
        "gecko": { "id": "{04494d74-2263-4c6e-8cbc-5d151b778769}" }
    },

    "permissions": ["storage"]
}